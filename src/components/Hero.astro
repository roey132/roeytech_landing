---
const {
  title = "שכרו אדם אחד, לא סוכנות.",
  subtitle = "טקסט תיאור קצר על השירותים.",
  imageSrc = "/images/placeholder-image.png",
  buttonPrimary = { text: "עובדים איתי", href: "#" },
  tags = ["אוטומציות"],
} = Astro.props;
---


<section class="purple-hero py-20 px-6">
  <div class="max-w-7xl mx-auto flex flex-col md:flex-column items-center gap-12">


    <!-- text on the visual right -->
    <div class="flex-1 text-right">
      <h1 class="text-center text-4xl md:text-5xl font-bold leading-snug text-[rgb(var(--foreground))]">
        {title}
      </h1>

      <p class="text-center mt-4 text-lg text-[rgb(var(--muted))] max-w-2xl md:ms-auto">
        {subtitle}
      </p>

      <!-- tags -->
      <div class="flex flex-wrap justify-center gap-3 mt-6">
        {tags.map((tag:string) => (
          <span class="px-4 py-1 rounded-full border border-[rgb(var(--border))] bg-[rgb(var(--card))] text-[rgb(var(--foreground))] text-sm">
            {tag}
          </span>
        ))}
      </div>

      <!-- buttons -->
      <div class="mt-8 flex gap-4 justify-center">
        <a href={buttonPrimary.href}
           class="inline-block px-6 py-3 rounded-lg font-medium bg-[rgb(var(--primary))] text-[rgb(var(--primary-foreground))] hover:opacity-90 transition">
          {buttonPrimary.text}
        </a>
      </div>
    </div>
        <!-- image on the visual left (first in row) -->
    <div class="flex-1 flex justify-center">
        <div class="aspect-[1/1] max-w-md w-full"> <!-- 1:1 square ratio -->
            <img
            src={imageSrc}
            alt="תמונה ראשית"
            class="w-full h-full object-cover rounded-2xl shadow-lg"
            />
        </div>
    </div>
  </div>
</section>
