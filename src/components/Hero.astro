---
const {
  title = "תנו לעסק לעבוד בשבילכם",
  subtitle = `
בעזרת אוטומציות, אינטגרציות, בוטים ומערכות חכמות - העסק שלך ימשיך לפעול, גם כשאתה לא שם.
פחות עבודה - יותר תוצאות. 
  `,
  imageSrc = "/images/placeholder-image.png",
  buttonPrimary = { text: "בואו נתחיל יחד", href: "#contact" },
  buttonSecondary = { text: "מי אני?", href: "#about-me" },
  tags = ["אוטומציות", "אינטגרציות", "בוטים", "עיבוד נתונים", "התאמה אישית"],
} = Astro.props;
---

<section class="purple-hero px-6 py-20">
  <div
    class="mx-auto flex max-w-7xl flex-col items-center justify-center gap-12"
  >
    <!-- text on the visual right -->
    <div class="flex flex-col items-center justify-center text-right">
      <h1
        class="text-center text-5xl leading-snug font-bold text-[rgb(var(--foreground))] underline decoration-violet-500 decoration-10 underline-offset-10 md:text-8xl"
      >
        {title}
      </h1>

      <p
        class="mt-4 max-w-2xl text-center text-2xl leading-snug text-[rgb(var(--primary))]"
      >
        {subtitle}
      </p>

      <!-- tags -->
      <div class="mt-6 flex flex-wrap justify-center gap-3">
        {
          tags.map((tag: string) => (
            <span class="rounded-md border border-[rgb(var(--ring))]/50 px-2 py-0.5 text-sm text-[rgb(var(--muted-foreground))]">
              {tag}
            </span>
          ))
        }
      </div>

      <!-- buttons -->
      <div class="mt-8 flex justify-center gap-4">
        <a
          href={buttonPrimary.href}
          class="p-5px inline-block rounded-lg bg-[rgb(var(--primary))] px-3 py-3 text-xl font-medium text-[rgb(var(--primary-foreground))] transition hover:opacity-90"
        >
          {buttonPrimary.text}
        </a>
        <a
          href={buttonSecondary.href}
          class="p-5px inline-block rounded-lg bg-[rgb(var(--muted))] px-3 py-3 text-xl font-medium text-[rgb(var(--primary-foreground))] transition hover:opacity-90"
        >
          {buttonSecondary.text}
        </a>
      </div>
    </div>
    <!-- image on the visual left (first in row) -->
    <div class="flex flex-1 justify-center">
      <div class="aspect-[1/1] w-full max-w-md">
        <!-- 1:1 square ratio -->
        <img
          src={imageSrc}
          alt="תמונה ראשית"
          class="h-full w-full rounded-2xl object-cover shadow-lg"
        />
      </div>
    </div>
  </div>
</section>
