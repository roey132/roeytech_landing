<section id="contact" class="px-6 py-16">
  <div
    class="purple-hue mx-auto max-w-xl rounded-2xl border border-[rgb(var(--border))] bg-[rgb(var(--card))]/70 p-6"
  >
    <h2
      class="mb-4 text-right text-2xl font-semibold text-[rgb(var(--foreground))]"
    >
      צור קשר
    </h2>

    <form data-contact-form class="space-y-4" dir="rtl" novalidate>
      <!-- honeypot -->
      <input
        type="text"
        name="company"
        class="hidden"
        tabindex="-1"
        autocomplete="off"
      />

      <div class="grid gap-4 sm:grid-cols-2">
        <div class="text-right">
          <label class="mb-1 block text-sm text-[rgb(var(--muted))]"
            >שם מלא</label
          >
          <input
            data-field="name"
            name="name"
            required
            class="w-full rounded-lg border border-[rgb(var(--border))] bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-[rgb(var(--ring))]"
            placeholder="ישראל ישראלי"
            autocomplete="name"
          />
          <p data-error-for="name" class="mt-1 hidden text-sm text-red-500">
            נא להזין שם.
          </p>
        </div>

        <div class="text-right">
          <label class="mb-1 block text-sm text-[rgb(var(--muted))]"
            >אימייל</label
          >
          <input
            data-field="email"
            name="email"
            type="email"
            required
            class="w-full rounded-lg border border-[rgb(var(--border))] bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-[rgb(var(--ring))]"
            placeholder="you@example.com"
            autocomplete="email"
          />
          <p data-error-for="email" class="mt-1 hidden text-sm text-red-500">
            אימייל לא תקין.
          </p>
        </div>
      </div>

      <div class="text-right">
        <label class="mb-1 block text-sm text-[rgb(var(--muted))]">טלפון</label>
        <input
          data-field="phone"
          name="phone"
          type="tel"
          required
          inputmode="tel"
          autocomplete="tel"
          pattern="[0-9+]*"
          inputmode="numeric"
          class="w-full rounded-lg border border-[rgb(var(--border))] bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-[rgb(var(--ring))]"
          placeholder="050xxxxxxxx"
        />
        <p data-error-for="phone" class="mt-1 hidden text-sm text-red-500">
          מספר טלפון לא תקין.
        </p>
      </div>

      <div class="text-right">
        <label class="mb-1 block text-sm text-[rgb(var(--muted))]"
          >שאלה / פנייה (לא חובה)</label
        >
        <textarea
          data-field="message"
          name="message"
          rows="4"
          class="w-full rounded-lg border border-[rgb(var(--border))] bg-transparent px-3 py-2 outline-none focus:ring-2 focus:ring-[rgb(var(--ring))]"
          placeholder="ספרו בקצרה מה צריך..."></textarea>
      </div>

      <!-- Buttons: start gray in HTML -->
      <div class="flex items-center justify-start gap-3">
        <button
          type="submit"
          data-send-btn
          class="inline-flex items-center justify-center rounded-lg bg-gray-400 px-5 py-2 font-medium transition"
        >
          שליחה
        </button>
        <span data-btn-error class="hidden text-sm text-red-500"
          >יש למלא את כל השדות הדרושים.</span
        >
      </div>

      <pre
        data-output
        class="mt-6 hidden overflow-auto rounded-lg border border-[rgb(var(--border))] bg-[rgb(var(--card))] p-3 text-sm">
      </pre>
    </form>
  </div>

  <script src="../scripts/ContactForm.js"></script>
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      (window as any).initContactForm();
    });
  </script>
</section>
