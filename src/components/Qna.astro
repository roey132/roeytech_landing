---
/**
 * Props:
 * - title?: string
 * - items: Array<{ q: string; a: string; open?: boolean }>
 */
const { title = "שאלות נפוצות", items = [] } = Astro.props;
---

<section class="py-14 px-6">
  <div class="max-w-3xl mx-auto">
    <h2 class="text-center !important text-2xl md:text-3xl font-semibold text-[rgb(var(--foreground))] mb-6">
      {title}
    </h2>

    <div class="space-y-3">
      {items.map(({ q, a, open }) => (
        <details class="purple-hue group rounded-2xl border border-[rgb(var(--border))] bg-[rgb(var(--card))]/70
                               px-5 py-4 text-right transition"
                 {...(open ? { open: true } : {})}>
          <summary class="cursor-pointer list-none select-none font-medium text-[rgb(var(--foreground))]">
            {q}
          </summary>

          <div class="mt-3 text-[rgb(var(--muted))] leading-relaxed">
            {a}
          </div>

          <style>
            /* remove default marker */
            details summary::-webkit-details-marker { display: none; }
          </style>
        </details>
      ))}
    </div>
  </div>
</section>
