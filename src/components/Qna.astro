---
type FAQItem = {
  q: string;
  a: string;
  open?: boolean;
};
const items: FAQItem[] = [
  {
    q: "עם מה אתה עובד?",
    a: "Astro, Tailwind, אינטגרציות API, ואוטומציות.",
    open: true,
  },
  {
    q: "איך מתחילים?",
    a: "שיחה קצרה, מיפוי צרכים, הצעת תכנית, ואז מתחילים.",
  },
  {
    q: "מה זמן האספקה?",
    a: "בין ימים לשבועות – תלוי בהיקף. תקבלו עדכונים שוטפים.",
  },
];
const { title = "שאלות נפוצות" } = Astro.props;
---

<section class="px-6 py-14">
  <div class="mx-auto max-w-3xl">
    <h2
      class="!important mb-6 text-center text-2xl font-semibold text-[rgb(var(--foreground))] md:text-3xl"
    >
      {title}
    </h2>

    <div class="space-y-3">
      {
        items.map(({ q, a, open }) => (
          <details
            class="purple-hue group rounded-2xl border border-[rgb(var(--border))] bg-[rgb(var(--card))]/70 px-5 py-4 text-right transition"
            {...(open ? { open: true } : {})}
          >
            <summary class="cursor-pointer list-none font-medium text-[rgb(var(--foreground))] select-none">
              {q}
            </summary>

            <div class="mt-3 leading-relaxed text-[rgb(var(--muted))]">{a}</div>
          </details>
        ))
      }
    </div>
  </div>
</section>
