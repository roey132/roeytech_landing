---
type FAQItem = {
  q: string;
  a: string;
  open?: boolean;
};
const items: FAQItem[] = [
  {
    q: "איך זה עובד?",
    a: "בכל עסק יש תהליכים ידניים. בעזרת מערכות חכמות, אוטומציות, בוטים ואינטגרציות ניתן לייעל תהליכים, לחסוך זמן, עבודה וכסף בצורה שוטפת.",
    open: true,
  },
  {
    q: "איך מתחילים?",
    a: "מתחילים בשיחה להבנת התהליך היום יומי של העסק, להבין איפה אפשר לחסוך עבודה והיכן אפשר לייעל תהליכים, משם ממשיכים לתכנון ולפיתוח המנגנונים.",
    open: true,
  },
  {
    q: "כמה זמן זה לוקח?",
    a: "הזמנים משתנים בהתאם לעסק ולתהליכים המוצעים, התהליך יכול לקחת בין ימים לשבועות.",
    open: true,
  },
];
const { title = "שאלות נפוצות" } = Astro.props;
---

<section class="px-6 py-14">
  <div class="mx-auto max-w-3xl">
    <h2
      class="mb-6 text-center text-2xl font-semibold text-[rgb(var(--foreground))] underline decoration-violet-500 decoration-3 underline-offset-5 md:text-3xl"
    >
      {title}
    </h2>

    <div class="space-y-3">
      {
        items.map(({ q, a, open }) => (
          <details
            class="purple-hue group rounded-2xl border border-[rgb(var(--ring))] bg-[rgb(var(--background))]/70 px-5 py-4 text-right transition"
            {...(open ? { open: true } : {})}
          >
            <summary class="cursor-pointer list-none text-xl font-medium text-[rgb(var(--foreground))] underline decoration-violet-500 decoration-3 underline-offset-5 select-none">
              {q}
            </summary>

            <div class="mt-3 text-lg leading-relaxed text-[rgb(var(--foreground))]">
              {a}
            </div>
          </details>
        ))
      }
    </div>
  </div>
</section>
