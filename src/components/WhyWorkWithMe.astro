---
type TextBlock = {
  heading: string;
  text: string;
};
const items: TextBlock[] = [
  {
    heading: "יחס אישי",
    text: "העבודה היא רק מולי, בלי בירוקרטיה של סוכנויות וחברות גדולות",
  },
  {
    heading: "התאמה אישית וממוקדת",
    text: "מתמקדים בנקודות חשובות ליום יום של העסק ומייעלים תהליכים חשובים",
  },
  {
    heading: "תהליך פשוט",
    text: "שיחה קצרה להבנת העסק - מיפוי נקודות חולשה - תכנון - פיתוח ותוצר",
  },
  {
    heading: "ליווי לאורך כל הדרך",
    text: "זמינות מלאה לכל שאלה שעולה, התאמה לצרכים חדשים שעולים לעסק",
  },
];

const { title = "למה לעבוד איתי?" } = Astro.props;
---

<section class="px-6 py-14">
  <div class="mx-auto max-w-7xl">
    <h2
      class="mb-6 text-center text-2xl font-semibold text-[rgb(var(--foreground))] underline decoration-violet-500 decoration-3 underline-offset-5 md:text-3xl"
    >
      {title}
    </h2>

    <div class="grid gap-5 sm:grid-cols-2 lg:grid-cols-4">
      {
        items.map(({ heading, text }) => (
          <article class="purple-hue group relative overflow-hidden rounded-2xl border border-[rgb(var(--ring))] bg-[rgb(var(--background))]/70 px-6 py-6 text-right shadow-sm">
            <h3 class="relative z-10 text-center text-xl font-bold text-[rgb(var(--foreground))] underline decoration-violet-500 decoration-3 underline-offset-5 md:text-xl">
              {heading}
            </h3>
            <p class="text-md relative z-10 mt-1 text-center text-[rgb(var(--foreground))]">
              {text}
            </p>
          </article>
        ))
      }
    </div>
  </div>
</section>
